<assembly
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <fileSets>
    <fileSet>
      <directory>src/main/java</directory>
      <excludes>
        <exclude>automata/_ast/</exclude>
        <exclude>automata/_symboltable/</exclude>
      </excludes>
      <outputDirectory>src</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/main/java</directory>
      <includes>
        <include>automata/_ast/</include>
        <include>automata/_symboltable/</include>
      </includes>
      <outputDirectory>hwc</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/main/grammars</directory>
      <outputDirectory/>
    </fileSet>
    <fileSet>
      <directory>src/main/resources</directory>
      <outputDirectory/>
    </fileSet>
  </fileSets>
  <id>automata-example</id>
  <includeBaseDirectory>false</includeBaseDirectory>
  <includeSiteDirectory>false</includeSiteDirectory>
</assembly>
